{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "moduleResolution":"node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
